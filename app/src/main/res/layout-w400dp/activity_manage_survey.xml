<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/frag_dataview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:name="android.zeroh729.com.pcari.views.fragments.ManageSurveyListFragment_"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <fragment
                android:id="@+id/frag_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="android.zeroh729.com.pcari.views.fragments.ManageSurveyDetailsFragment_"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>